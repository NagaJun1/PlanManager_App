<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanManager.views.PlanElementLayout"
             BackgroundColor="White"
             Orientation="Horizontal">

    <!--日付の表示領域-->
    <Label x:Name="LblDate" BackgroundColor="SkyBlue" TextColor="White" HorizontalOptions="Start"
           FontSize="20" Margin="5" Padding="5" WidthRequest="40" HorizontalTextAlignment="Center"/>

    <!--メモの項目を透明にして、全体に広げる -->
    <!--メモの表示領域-->
    <Label x:Name="LblMemo" TextColor="Black" HorizontalOptions="FillAndExpand"
           FontSize="20" Margin="5" Padding="5" BackgroundColor="#00FFFF00"/>

    <!--優先度の表示領域-->
    <Label x:Name="LblPriority" TextColor="White" BackgroundColor="LightSteelBlue" HorizontalOptions="EndAndExpand"
           FontSize="20" Margin="5" Padding="5" HorizontalTextAlignment="Center"/>
</StackLayout>
